<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roc.mapper.SysUserMapper">
    <resultMap id="BaseResultMap" type="SysUser">
        <id column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="CHAR"/>
        <result column="head_image" property="headImage" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insertPojo" parameterType="SysUser">
        insert into
        sys_user(account,user_name,password,sex,head_image)
        values (
        #{account},
        #{userName},
        #{password},
        #{sex},
        #{headImage}
        )
    </insert>

    <update id="updatePojo" parameterType="SysUser">
        update sys_user set
        account=#{account},
        user_name=#{userName},
        password=#{password},
        sex=#{sex},
        head_image=#{headImage}
        where user_id=#{userId}
    </update>

    <select id="getPojo" resultMap="BaseResultMap">
        select * from sys_user where user_id=#{id}
    </select>

    <select id="getByAccount" resultMap="BaseResultMap">
        select * from sys_user
        where account=#{account}
    </select>

    <delete id="deletePojo">
        delete from sys_user where user_id=#{id}
    </delete>

</mapper>